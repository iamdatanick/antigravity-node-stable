# --- Database ---
POSTGRES_USER=antigravity
POSTGRES_PASSWORD=changeme
POSTGRES_DB=antigravity

# --- Security (change in production) ---
KEYCLOAK_ADMIN_PASSWORD=admin
OPENBAO_DEV_TOKEN=dev-only-token

# --- Authentication (Keycloak OAuth/OIDC) ---
# Set AUTH_ENABLED=true to enforce JWT validation on protected endpoints
AUTH_ENABLED=false
KEYCLOAK_REALM=antigravity
KEYCLOAK_CLIENT_ID=antigravity-api

# --- API Keys (set at least one for cloud LLM access) ---
# Leave blank to use local Ollama only
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# --- Budget Control ---
DAILY_BUDGET_USD=50
GOD_MODE_ITERATIONS=50
GOOSE_MODEL=gpt-4o

# --- CORS ---
CORS_ORIGINS=http://localhost:1055,http://localhost:3000,http://localhost:3055

# --- S3 (SeaweedFS) ---
S3_ACCESS_KEY=antigravity
S3_SECRET_KEY=antigravity_secret

# --- Host Data Directories ---
HOST_DATA_DIR=./data
HOST_CONTEXT_DIR=./data

# --- Cloudflare Tunnel (optional) ---
# Get token from: https://one.dash.cloudflare.com -> Networks -> Tunnels
# Then run: docker compose --profile tunnel up -d cloudflare-tunnel
CLOUDFLARE_TUNNEL_TOKEN=
